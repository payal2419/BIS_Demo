                            })
                        }
                        else {
                            $(txtArea).css({
                                "border": "",
                                "background": ""
                            })
                        }

                        // for City
                        if ($.trim((txtCity).val()) == "" || $.trim((txtCity).val()) == null) {
                            isValid = false;
                            $(txtCity).css({
                                "border": "1px solid red",
                                "background": "#FFCECE"
                            })
                        }
                        else {
                            $(txtCity).css({
                                "border": "",
                                "background": ""
                            })
                        }

                        // for Pincode
                        if ($.trim((txtPincode).val()) == "" || $.trim((txtPincode).val()) == null) {
                            isValid = false;
                            $(txtPincode).css({
                                "border": "1px solid red",
                                "background": "#FFCECE"
                            })
                        }
                        else {
                            $(txtPincode).css({
